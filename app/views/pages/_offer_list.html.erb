<div class="card mt-3">
  <ul class="list-group list-group-flush">
    <% @results.each do |result| %>
      <li class="list-group-item d-flex align-items-center">
        <%= link_to '<i class="fas fa-calendar-alt"></i> Agendar!'.html_safe,
                    offer_path(result),
                    class: 'btn btn-primary' %>
        <div class="ml-5">
          <h5 class="card-title">
            <%= result.city %>
          </h5>
          <p class="card-text">
            <%= result.description %>
          </p>
        </div>
      </li>
    <% end %>
    <% unless @results.length.positive? %>
      <li class="list-group-item">
        <p class="card-text">
          Ops, nenhuma oferta ğŸ˜•
        </p>
        <p class="card-text">
          Pesquise novamente ou <%= link_to "Crie sua oferta", new_offer_path, class: "btn-link" %>
        </p>
      </li>
    <% end %>
  </ul>
</div>