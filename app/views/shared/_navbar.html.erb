<div class="navbar navbar-expand-sm navbar-light navbar-logo">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "logobusao.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
           <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Página principal", root_path, class: "nav-link" %>
        </li>
        <%# Messages, não acho necessário no momento %>
        <%# <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        <%# </li> %>
        <li class="nav-item dropdown">
          <% if current_user %>
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, crop: :thumb, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= cl_image_tag "no-avatar_oemeu2", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Meus agendamentos", bookings_path, class: "dropdown-item" %>
            <%= link_to "Minhas ofertas", offers_path, class: "dropdown-item" %>
            <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Entrar", new_user_session_path, class: "btn btn-warning" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
