    <%= link_to 'Ativar oferta', offer_path(@offer.id), method: :delete, data: { confirm: "Está certo disto?" } %>
  <% end %>
<% else %>
  <%= link_to 'Agendar', new_offer_booking_path(@offer) %>
<% end %>
